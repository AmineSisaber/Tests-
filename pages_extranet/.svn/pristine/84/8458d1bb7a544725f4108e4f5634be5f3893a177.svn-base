.ngdialog.ngdialog-theme-default .ngdialog-content {
    width: 90%;
    box-sizing: content-box;
    line-height: inherit;
    font-size: inherit;
    padding: 30px;
}

.ngdialog td { text-align: left; }

.st-sort-ascent:before {
    content: '\25B2';
}

.st-sort-descent:before {
    content: '\25BC';
}

th[st-sort]:hover { cursor: pointer; }

body {
    font-family: open-sans;
    font-size: 14px;
}

div#container {
	width : 964px; margin: 0 auto;
}

thead tr.head th {
	font-weight: bold;
    color: #fdfdfd;
    border: 1px solid #dfdfdf;
    border-right: 0;
    border-bottom: 0;
    border-top: 0;
    text-align: center;
    padding: 6px;
    vertical-align: middle;
}

thead tr.head{
	background-color: #8e8e8e;
}

tbody td {
	border: 1px solid #dfdfdf;
    text-align: center;
    padding: 6px;
    vertical-align: middle;
}

table { width: 100%; }

.pagination > .active > a, .pagination > .active > a:focus, .pagination > .active > a:hover {
	background-color: #e04580;
	border-color: #e04580;
}

.pagination>li>a:hover {color: #e04580; }

.pagination > li > a {
	color: #e04580;
}

div.search { width : 300px; padding : 10px 0; }

input[st-search] {
	padding : 2px 4px; color: #555; width: 100%;
}

td.aleft { text-align: left;}

::-webkit-input-placeholder { /* Chrome/Opera/Safari */
  color: #555;
}
::-moz-placeholder { /* Firefox 19+ */
  color: #555;
}
:-ms-input-placeholder { /* IE 10+ */
  color: #555;
}
:-moz-placeholder { /* Firefox 18- */
  color: #555;
}
